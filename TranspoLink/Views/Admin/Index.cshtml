@model IEnumerable<Booking>

@{
    ViewBag.Title += " | Admin Dashboard";
}

@section head {
    <link rel="stylesheet" href="/css/admin.css" asp-append-version="true" />
    <script src="/js/admin.js" asp-append-version="true" defer></script>
}
<div class="admin-container">
    <div class="admin-header">
        <h1>🎯 Admin Dashboard</h1>
        <p>Welcome back! Here's what's happening with TranspoLink today.</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-label">👥 Total Members</div>
            <div class="stat-value">@ViewBag.TotalMembers</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">🗺️ Active Routes</div>
            <div class="stat-value">@ViewBag.TotalRoutes</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">🚌 Total Vehicles</div>
            <div class="stat-value">@ViewBag.TotalVehicles</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">📋 Total Bookings</div>
            <div class="stat-value">@ViewBag.TotalBookings</div>
        </div>
        <div class="stat-card pending">
            <div class="stat-label">⏳ Pending Bookings</div>
            <div class="stat-value">@ViewBag.PendingBookings</div>
        </div>
        <div class="stat-card today">
            <div class="stat-label">📅 Today's Bookings</div>
            <div class="stat-value">@ViewBag.TodayBookings</div>
        </div>
    </div>


    <div class="admin-nav">
        <div class="nav-card dropdown-card" id="userMgmtTrigger">
            <div class="nav-card-icon">👥</div>
            <div class="nav-card-title">User Management</div>
            <div class="nav-card-desc">Admins & Members</div>

            <div class="dropdown-menu-content" id="userDropdown">
                <a href="/Admin/Admins" class="dropdown-item"><span>🛡️</span> Admins</a>
                <a href="/Admin/Members" class="dropdown-item"><span>👤</span> Members</a>

            </div>
        </div>

        <div class="nav-card dropdown-card" id="opsMgmtTrigger">
            <div class="nav-card-icon">🚌</div>
            <div class="nav-card-title">Transport Ops</div>
            <div class="nav-card-desc">Routes, Fleet & Trips</div>

            <div class="dropdown-menu-content" id="opsDropdown">
                <a href="/RouteNTrip/Routes" class="dropdown-item"><span>🗺️</span> Routes</a>
                <a href="/Vehicle/Vehicles" class="dropdown-item"><span>🚌</span> Vehicles</a>
                <a href="/Admin/Trips" class="dropdown-item"><span>🎫</span> Trips</a>
                <a href="/Admin/Bookings" class="dropdown-item"><span>📋</span> Bookings</a>

            </div>
        </div>

        <a href="/Admin/Reports" class="nav-card">
            <div class="nav-card-icon">📊</div>
            <div class="nav-card-title">Reports</div>
            <div class="nav-card-desc">Analytics & insights</div>
        </a>
    </div>

    <div class="recent-section">
        <h2>📋 Recent Bookings</h2>
        @if (Model.Any())
        {
            <table class="booking-table">
                <thead>
                    <tr>
                        <th>Booking ID</th>
                        <th>Member</th>
                        <th>Route</th>
                        <th>Date</th>
                        <th>Seats</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>#@booking.Id</td>
                            <td>@booking.Member.Name</td>
                            <td>@booking.Trip.Route.Origin → @booking.Trip.Route.Destination</td>
                            <td>@booking.BookingDate.ToString("dd MMM yyyy")</td>
                            <td>@booking.NumberOfSeats</td>
                            <td>RM @booking.TotalPrice.ToString("N2")</td>
                            <td>
                                <span class="status-badge status-@booking.Status.ToLower()">
                                    @booking.Status
                                </span>
                            </td>
                            <td>
                                <a href="/Admin/BookingDetails/@booking.Id" class="btn-view">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p style="text-align: center; color: #666; padding: 40px;">No bookings yet.</p>
        }
    </div>
</div>