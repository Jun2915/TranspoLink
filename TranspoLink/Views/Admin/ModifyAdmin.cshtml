@model AdminVM

@{
    ViewBag.Title += " | Modify Admin";
}

@section head {
    <link rel="stylesheet" href="/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/member.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/photo-tools.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <script src="/js/photo-tools.js" asp-append-version="true" defer></script>
    <script src="/js/admin.js" asp-append-version="true" defer></script>
}

<div class="admin-container admin-bg-page">
    <div style="margin-bottom: 20px;">
        <a href="/Admin/Admins" class="btn-back">← Back to Admins</a>
    </div>

    @* The Glass Card Wrapper *@
    <div class="admin-glass-card">
        <form method="post" enctype="multipart/form-data" class="edit-admin-form">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistingPhotoURL" />
            <input asp-for="Photo" type="file" accept="image/jpeg,image/png" hidden>
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            @* LANDSCAPE GRID: Photo Left | Details Right *@
            <div class="edit-layout-grid">

                @* --- LEFT SIDE --- *@
                <div class="edit-col-left">
                    <div id="photoContainer" class="edit-photo-container">
                        <img src="@(Model.ExistingPhotoURL != null && Model.ExistingPhotoURL.StartsWith("/images/") ? Model.ExistingPhotoURL : "/images/" + Model.ExistingPhotoURL)"
                             id="adminPhotoPreview"
                             alt="Profile Photo"
                             onerror="this.src='/images/beauty_admin.png'">
                        <div class="edit-photo-overlay">
                            <span>Change</span>
                        </div>
                    </div>
                    <div style="margin-top:15px; font-size:14px; color:#666;">
                        Admin ID: <b>@Model.Id</b>
                    </div>
                </div>

                @* --- RIGHT SIDE --- *@
                <div class="edit-col-right">
                    <h2 class="edit-title-landscape">Edit Profile: @Model.Name</h2>

                    <div class="form-grid-layout">
                        <div class="admin-input-group">
                            <span class="input-icon">👤</span>
                            <input asp-for="Name" placeholder="Full Name">
                        </div>
                        <div class="admin-input-group">
                            <span class="input-icon">📧</span>
                            <input asp-for="Email" placeholder="Email Address">
                        </div>
                    </div>
                    <span asp-validation-for="Name" style="color:red; font-size:12px;"></span>
                    <span asp-validation-for="Email" style="color:red; font-size:12px;"></span>

                    <div class="admin-input-group">
                        <span class="input-icon">📞</span>
                        <input asp-for="Phone" placeholder="Phone Number">
                    </div>
                    <span asp-validation-for="Phone" style="color:red; font-size:12px;"></span>

                    <div class="admin-input-group">
                        <span class="input-icon">🔒</span>
                        <input asp-for="Password" type="password" placeholder="New Password (Optional)">
                        <button type="button" class="toggle-password-btn">👁️</button>
                    </div>
                    <span asp-validation-for="Password" style="color:red; font-size:12px;"></span>

                    <div style="margin-top: 15px; padding: 15px; background: rgba(0,0,0,0.03); border-radius: 10px; display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <strong>Block Access</strong>
                            <p style="font-size:12px; margin:0; color:#666;">Prevent login to system.</p>
                        </div>
                        <input asp-for="IsBlocked" type="checkbox" style="width: 20px; height: 20px;">
                    </div>

                    <button type="submit" class="btn-save-changes">💾 Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>