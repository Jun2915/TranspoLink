@model AdminVM

@{
    ViewBag.Title += " | Modify Admin";
}

@section head {
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="/css/member.css" />
}

<div class="admin-container">
    <div style="margin-bottom: 20px;">
        <a href="/Admin/Admins" class="btn-back">← Back to Admins</a>
    </div>

    <div class="profile-card" style="max-width: 600px; margin: 0 auto; text-align: left;">
        <div style="text-align: center; margin-bottom: 20px;">
            <img src="@(Model.ExistingPhotoURL != null && Model.ExistingPhotoURL.StartsWith("/images/") ? Model.ExistingPhotoURL : "/images/" + Model.ExistingPhotoURL)"
                 style="width: 100px; height: 100px; border-radius: 50%; object-fit: cover;"
                 onerror="this.src='/images/beauty_admin.png'">
            <h2>Edit Admin: @Model.Name</h2>
            <p class="profile-id">ID: @Model.Id</p>
        </div>

        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="field-input">
                    <span asp-validation-for="Name" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="field-input">
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label asp-for="Phone">Phone</label>
                    <input asp-for="Phone" class="field-input">
                    <span asp-validation-for="Phone" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label>Change Photo</label>
                    <input asp-for="Photo" type="file" accept="image/jpeg,image/png" class="field-input" style="border: none; padding-left: 0;">
                    <span asp-validation-for="Photo" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label asp-for="Password">Reset Password (Leave blank to keep current)</label>
                    <input asp-for="Password" class="field-input" placeholder="New Password">
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="display: flex; align-items: center; gap: 10px;">
                    <label asp-for="IsBlocked" style="margin: 0;">Block Account?</label>
                    <input asp-for="IsBlocked" type="checkbox" style="width: auto;">
                </div>
            </div>

            <button type="submit" class="btn-view" style="width: 100%; margin-top: 20px; font-size: 16px;">Save Changes</button>
        </form>
    </div>
</div>