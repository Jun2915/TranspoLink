@* @model: Defines the data structure this page expects. 
   AdminVM is the "ViewModel" containing fields like Name, Email, Password.
*@
@model AdminVM

@{
    // Sets the title that appears in the browser tab
    ViewBag.Title += " | Create Admin";
}

@section head {
    @* Loads your CSS files for styling *@
    <link rel="stylesheet" href="/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/member.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/photo-tools.css" asp-append-version="true" />

    @* Loads JavaScript libraries for the photo cropper and page logic *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <script src="/js/photo-tools.js" asp-append-version="true" defer></script>
    <script src="/js/admin.js" asp-append-version="true" defer></script>
}

@* Container Div:
   'admin-container': Basic layout spacing.
   'admin-bg-page': Applies your specific 'about_background.png' image fixed to the screen.
*@
<div class="admin-container admin-bg-page">

    @* Back Button to return to the list *@
    <div style="margin-bottom: 20px;">
        <a href="/Admin/Admins" class="btn-back">← Back to Admins</a>
    </div>

    @* THE GLASS CARD:
       We use the NEW class 'create-admin-glass-card' here.
       This applies the blur, transparency, and glass border defined in Step 1.
    *@
    <div class="create-admin-glass-card">

        @* <form>: The start of the input form.
           method="post": Sends data securely to the server.
           enctype="multipart/form-data": Required because we are uploading a file (Photo).
        *@
        <form method="post" enctype="multipart/form-data" class="admin-create-form">

            @* Displays a list of error messages if validation fails (e.g., "Email is required") *@
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="admin-form-layout">

                @* --- LEFT COLUMN: PHOTO UPLOAD --- *@
                <div class="admin-form-left">
                    <div class="form-header">
                        <h2>Profile Photo</h2>
                        <p style="color: #666;">Click to choose file or camera</p>
                    </div>

                    @* The circular photo area *@
                    <div id="photoContainer" title="Click to upload or take photo">
                        <img src="/images/add_photo.png" id="profileImagePreview" alt="Upload Photo">

                        @* The overlay that appears when you hover over the image *@
                        <div class="upload-overlay">
                            <svg width="40" height="40" viewBox="0 0 24 24" fill="white">
                                <path d="M4,4H7L9,2H15L17,4H20A2,2 0 0,1 22,6V18A2,2 0 0,1 20,20H4A2,2 0 0,1 2,18V6A2,2 0 0,1 4,4M12,7A5,5 0 1,0 17,12A5,5 0 0,0 12,7M12,9A3,3 0 1,1 9,12A3,3 0 0,1 12,9Z" />
                            </svg>
                            <span>Change Photo</span>
                        </div>
                    </div>

                    @* asp-for="Photo": Binds this input to the 'Photo' property in your AdminVM.
                       hidden: Keeps the ugly file input button invisible.
                    *@
                    <input asp-for="Photo" type="file" accept="image/jpeg,image/png" hidden>
                    <span asp-validation-for="Photo" class="field-validation-error" style="margin-top:15px;"></span>
                </div>

                @* --- RIGHT COLUMN: INPUT FIELDS --- *@
                <div class="admin-form-right">

                    <div class="form-header">
                        <h2>Account Details</h2>
                        <p style="color: #666;">Create a new administrator account.</p>
                    </div>

                    @* Row 1: Name and Email *@
                    <div class="input-grid-row">
                        <div>
                            <div class="admin-input-group">
                                <span class="input-icon">👤</span>
                                @* asp-for="Name": Binds to AdminVM.Name *@
                                <input asp-for="Name" placeholder="Full Name">
                            </div>
                            <span asp-validation-for="Name" class="field-validation-error"></span>
                        </div>

                        <div>
                            <div class="admin-input-group">
                                <span class="input-icon">📧</span>
                                @* asp-for="Email": Binds to AdminVM.Email *@
                                <input asp-for="Email" placeholder="Email Address">
                            </div>
                            <span asp-validation-for="Email" class="field-validation-error"></span>
                        </div>
                    </div>

                    @* Row 2: Phone *@
                    <div class="admin-input-group">
                        <span class="input-icon">📞</span>
                        @* asp-for="Phone": Binds to AdminVM.Phone *@
                        <input asp-for="Phone" placeholder="Phone Number (e.g., 012-3456789)">
                    </div>
                    <span asp-validation-for="Phone" class="field-validation-error"></span>

                    @* Row 3: Passwords *@
                    <div class="input-grid-row">
                        <div>
                            <div class="admin-input-group">
                                <span class="input-icon">🔒</span>
                                @* asp-for="Password": Binds to AdminVM.Password *@
                                <input asp-for="Password" type="password" placeholder="Password">
                                <button type="button" class="toggle-password-btn">
                                    @* Eye Icon SVG for showing/hiding password *@
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="#999"><path d="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" /></svg>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="field-validation-error"></span>
                        </div>

                        <div>
                            <div class="admin-input-group">
                                <span class="input-icon">🔒</span>
                                @* asp-for="ConfirmPassword": Binds to AdminVM.ConfirmPassword *@
                                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password">
                                <button type="button" class="toggle-password-btn">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="#999"><path d="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" /></svg>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                        </div>
                    </div>

                    @* Submit Button *@
                    <button type="submit" class="btn-create-admin">
                        ✨ Create Admin Account
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>