@model AdminVM

@{
    ViewBag.Title += " | Create Admin";
}

@section head {
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="/css/member.css" />
}

<div class="admin-container">
    <div style="margin-bottom: 20px;">
        <a href="/Admin/Admins" class="btn-back">← Back to Admins</a>
    </div>

    <div class="profile-card" style="max-width: 600px; margin: 0 auto; text-align: left;">
        <h2 style="text-align: center; margin-bottom: 30px;">Create New Admin</h2>

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="field-input">
                    <span asp-validation-for="Name" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="field-input">
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label asp-for="Phone">Phone</label>
                    <input asp-for="Phone" class="field-input">
                    <span asp-validation-for="Phone" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="field-input">
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="field-input">
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>
            </div>

            <div class="field-row">
                <div class="field-info" style="width: 100%;">
                    <label>Photo</label>
                    <input asp-for="Photo" type="file" accept="image/jpeg,image/png" class="field-input" style="border: none; padding-left: 0;">
                    <span asp-validation-for="Photo" class="field-validation-error"></span>
                </div>
            </div>

            <button type="submit" class="btn-view" style="width: 100%; margin-top: 20px; font-size: 16px;">Create Admin</button>
        </form>
    </div>
</div>