@model IEnumerable<Admin>

@{
    ViewBag.Title += " | Admin Management";
}

@section head {
    <link rel="stylesheet" href="/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/member.css" asp-append-version="true" />
    <script src="/js/admin.js" asp-append-version="true" defer></script>
}

@* Added class 'admin-bg-page' for transparent fixed background *@
<div class="admin-container admin-bg-page">
    <div class="admin-header">
        <div class="admin-header-text">
            <h1>🛡️ Admin Management</h1>
            <p>Manage system administrators and access.</p>
        </div>

        @if (ViewBag.IsSystemAdmin)
        {
            <a href="/Admin/CreateAdmin" class="btn-view btn-add">+ Add New Admin</a>
        }
    </div>

    <div class="search-section">
        <form method="get" class="search-container" id="searchForm" onsubmit="event.preventDefault();">
            <input type="text" id="searchInput" name="search" value="@ViewBag.Search" placeholder="Search by ID, name, email..." autocomplete="off">
            <a href="javascript:void(0)" id="clearSearchBtn" class="btn-clear" style="display: none;">✕ Clear</a>
            <button type="submit" onclick="loadTable(1)">Search</button>
        </form>
    </div>

    <div id="tableContainer" class="recent-section">
        <partial name="_AdminTable" model="Model" />
    </div>

    <div class="pagination-container">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                    <a href="javascript:void(0)" onclick="loadTable(@i)">@i</a>
                </li>
            }
        </ul>
    </div>
</div>

<div id="confirmModal" class="confirm-overlay">
    <div class="confirm-box">
        <span class="confirm-icon">⚠️</span>
        <h3 class="confirm-title">Delete Admin?</h3>
        <p class="confirm-text">
            Are you sure you want to remove <b id="deleteNameDisplay" style="color:#ff4757;"></b>?<br>
            This action cannot be undone.
        </p>

        <div class="confirm-actions">
            <button onclick="closeConfirmModal()" class="btn-confirm-cancel">Cancel</button>

            <form method="post" id="deleteConfirmForm">
                <button type="submit" class="btn-confirm-delete">Yes, Delete</button>
            </form>
        </div>
    </div>
</div>