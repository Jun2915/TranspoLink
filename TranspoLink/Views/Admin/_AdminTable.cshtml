@model IEnumerable<Admin>

@{
    string currentUserId = ViewBag.CurrentUserId as string;
    bool isSystemAdmin = ViewBag.IsSystemAdmin != null && (bool)ViewBag.IsSystemAdmin;
}

<table class="booking-table">
    <thead>
        <tr>
            <th>Photo</th>
            <th class="sortable" data-col="Id">ID <span class="sort-arrow"></span></th>
            <th class="sortable" data-col="Name">Name <span class="sort-arrow"></span></th>
            <th class="sortable" data-col="Email">Email <span class="sort-arrow"></span></th>
            <th class="sortable" data-col="Phone">Phone <span class="sort-arrow"></span></th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var a in Model)
            {
                <tr>
                    <td>
                        <img src="@(a.PhotoURL != null && a.PhotoURL.StartsWith("/images/") ? a.PhotoURL : "/images/" + a.PhotoURL)"
                             class="member-photo"
                             onerror="this.src='/images/beauty_admin.png'">
                    </td>
                    <td>@a.Id</td>
                    <td>@a.Name</td>
                    <td>@a.Email</td>
                    <td>@a.Phone</td>
                    <td>
                        @if (a.IsBlocked)
                        {
                            <span class="status-badge status-cancelled">Blocked</span>
                        }
                        else
                        {
                            <span class="status-badge status-confirmed">Active</span>
                        }
                    </td>
                    <td class="action-links">
                        @* 1. BEAUTIFUL BADGE FOR CURRENT PROFILE *@
                        @if (a.Id == currentUserId)
                        {
                            <span class="badge-you">It's You ✨</span>
                        }
                        else
                        {
                            @* 2. DETAILS: Visible to everyone *@
                            <a href="/Admin/AdminDetails/@a.Id" class="btn-view">Details</a>

                            @* 3. EDIT & DELETE: Only for System Admin (A001) *@
                            if (isSystemAdmin)
                            {
                                if (a.Id != "A001")
                                {
                                    <a href="/Admin/ModifyAdmin/@a.Id" class="btn-view" style="background-color: #f59e0b;">Edit</a>
                                    <button type="button" class="btn-delete"
                                            onclick="openConfirmModal('/Admin/DeleteAdmin/@a.Id', '@a.Name')">
                                        Delete
                                    </button>
                                }
                                else
                                {
                                    <span style="font-size:12px; color:#667eea; font-weight:bold; margin-left: 5px;">🛡️ Super Admin</span>
                                }
                            }
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" style="text-align:center; padding: 20px;">No admins found.</td>
            </tr>
        }
    </tbody>
</table>

<input type="hidden" id="partialSort" value="@ViewBag.Sort" />
<input type="hidden" id="partialDir" value="@ViewBag.Dir" />