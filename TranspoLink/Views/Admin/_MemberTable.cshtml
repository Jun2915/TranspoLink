@model IEnumerable<Member>

<table class="booking-table">
    <thead>
        <tr>
            <th>Photo</th>
            <th class="sortable" data-col="Id">ID <span class="sort-arrow"></span></th>
            <th class="sortable" data-col="Name">Name <span class="sort-arrow"></span></th>
            <th class="sortable" data-col="Email">Email <span class="sort-arrow"></span></th>
            <th class="sortable" data-col="Phone">Phone <span class="sort-arrow"></span></th>
            <th class="sortable" data-col="Status">Status <span class="sort-arrow"></span></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var m in Model)
            {
                <tr>
                    <td>
                        <img src="@(m.PhotoURL != null && m.PhotoURL.StartsWith("/images/") ? m.PhotoURL : "/images/" + m.PhotoURL)"
                             class="member-photo"
                             onerror="this.src='/images/default_photo.png'">
                    </td>
                    <td>@m.Id</td>
                    <td>@m.Name</td>
                    <td>@m.Email</td>
                    <td>@m.Phone</td>
                    <td>
                        @if (m.IsBlocked)
                        {
                            <span class="status-badge status-cancelled">Blocked</span>
                        }
                        else
                        {
                            <span class="status-badge status-confirmed">Active</span>
                        }
                    </td>
                    <td class="action-links">
                        <a href="/Admin/MemberDetails/@m.Id" class="btn-view">Details</a>

                        <button class="btn-delete" type="button"
                                onclick="openConfirmModal('/Admin/DeleteMember/@m.Id', '@m.Name')">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" style="text-align:center; padding: 20px;">No members found.</td>
            </tr>
        }
    </tbody>
</table>

<input type="hidden" id="partialSort" value="@ViewBag.Sort" />
<input type="hidden" id="partialDir" value="@ViewBag.Dir" />