@model IEnumerable<Trip>
@{
    ViewBag.Title = "Trip Management";
}

@section head {
    <link rel="stylesheet" href="/css/RNT.css" asp-append-version="true" />
}

<div class="admin-container">
    <div class="rnt-header">
        <div class="rnt-title">
            <h2>🎫 Trip Management</h2>
            <p>Monitor scheduled trips and operational status.</p>
        </div>
        <a href="/RouteNTrip/CreateTrip" class="btn-rnt btn-rnt-success">+ Schedule New Trip</a>
    </div>

    <div class="search-container" style="margin-bottom: 20px;">
        <form method="get" action="/RouteNTrip/Trips" style="width: 100%; display: flex; gap: 10px;">

            <input type="text"
                   class="rnt-input"
                   name="search" 
                   value="@ViewBag.Search"
                   placeholder="Search by Trip ID, Route..."
                   style="flex-grow: 1;">

                <button type="submit" class="btn-rnt btn-rnt-primary" style="width: auto;">Search</button>

                @if (!string.IsNullOrEmpty(ViewBag.Search))
                {
                    <a href="/RouteNTrip/Trips" class="btn-rnt btn-rnt-danger" style="width: auto;">Clear</a>
                }
        </form>
    </div>

    <div class="rnt-card" style="padding:0; overflow:hidden;">
        <div class="rnt-table-wrapper">
            <table class="rnt-table">
                <thead>
                    <tr>
                        <th>Trip ID</th>
                        <th>Path (Origin ➝ Dest)</th>
                        <th>Vehicle</th>
                        <th>Departure</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td><b>@t.Id</b></td>
                            <td>@(t.Route?.Origin ?? "N/A") ➝ @(t.Route?.Destination ?? "N/A")</td>
                            <td>@t.Vehicle?.VehicleNumber</td>
                            <td>@t.DepartureTime.ToString("dd MMM HH:mm")</td>
                            <td><span class="status-badge status-@t.Status.Replace(" ", "").ToLower()">@t.Status</span></td>
                            <td>
                                <div style="display:flex; gap:8px;">
                                    <a href="/RouteNTrip/TripStop/@t.Id" class="btn-rnt btn-rnt-primary">Details</a>

                                    <form action="/RouteNTrip/DeleteTrip" method="post" onsubmit="return confirm('Delete trip @t.Id?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@t.Id" />
                                        <button type="submit" class="btn-rnt btn-rnt-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>