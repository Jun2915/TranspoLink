@model Trip
@{
    ViewBag.Title += " | Schedule New Trip";
}

@section head {
    <link rel="stylesheet" href="/css/RNT.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
}

<div class="admin-container">
    <div class="rnt-header">
        <div class="rnt-title">
            <h2>📅 Schedule New Trip</h2>
            <p>Select a route and vehicle to assign.</p>
        </div>
        <a href="/RouteNTrip/Trips" class="btn-rnt btn-rnt-primary">← Back</a>
    </div>

    <form method="post" style="background:white; padding:30px; border-radius:12px; max-width:600px; margin:0 auto;">

        @Html.AntiForgeryToken() 

        <div asp-validation-summary="ModelOnly" style="color:red; margin-bottom:15px;"></div>
        
        @* FIX: Use an input with a name attribute (even if readonly/disabled) OR a hidden field for model binding. *@
        <label style="display:block; margin-bottom:5px;">Trip ID (Auto)</label>
        <input name="Id" value="@ViewBag.NextTripId" class="rnt-input" readonly
               style="background-color:#eee; color:#666; font-weight:bold; cursor:not-allowed; margin-bottom:15px;" />
        
        @* Use the hidden field for reliable binding *@
        <input asp-for="Id" type="hidden" value="@ViewBag.NextTripId" />
        
        @* Add specific validation messages for each field *@
        <label style="display:block; margin-bottom:5px;">Select Route</label>
        <select asp-for="RouteId" asp-items="ViewBag.RouteList" class="rnt-input" style="margin-bottom:15px;"></select>
        <span asp-validation-for="RouteId" class="text-danger" style="display:block; margin-top:-10px; margin-bottom:10px;"></span>

        <label style="display:block; margin-bottom:5px;">Assign Vehicle</label>
        <select asp-for="VehicleId" asp-items="ViewBag.VehicleList" class="rnt-input" style="margin-bottom:15px;">
        <option value="">-- Select Vehicle --</option>
        </select>
        <span asp-validation-for="VehicleId" class="text-danger" style="display:block; margin-top:-10px; margin-bottom:10px;"></span>

        <label style="display:block; margin-bottom:5px;">Departure Time</label>
        <input asp-for="DepartureTime" type="text" class="rnt-input flatpickr" style="margin-bottom:15px;" placeholder="Select Departure" />
        <span asp-validation-for="DepartureTime" class="text-danger" style="display:block; margin-top:-10px; margin-bottom:10px;"></span>


        <label style="display:block; margin-bottom:5px;">Arrival Time (Estimated)</label>
        <input asp-for="ArrivalTime" type="text" class="rnt-input flatpickr" style="margin-bottom:15px;" placeholder="Select Arrival" />
        <span asp-validation-for="ArrivalTime" class="text-danger" style="display:block; margin-top:-10px; margin-bottom:10px;"></span>


        <label style="display:block; margin-bottom:5px;">Price (RM)</label>
        <input asp-for="Price" type="number" step="0.01" class="rnt-input" style="margin-bottom:20px;" />
        <span asp-validation-for="Price" class="text-danger" style="display:block; margin-top:-10px; margin-bottom:10px;"></span>


        <button class="btn-rnt btn-rnt-success" style="width:100%; padding:15px;">Create Schedule</button>
    </form>
</div>


<script>
    flatpickr(".flatpickr", { enableTime: true, dateFormat: "Y-m-d H:i" });
</script>

@section scripts {
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
}