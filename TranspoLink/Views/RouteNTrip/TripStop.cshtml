@model Trip
@{
    ViewBag.Title = "Trip Control | " + Model.Id;
}

@section head {
    <link rel="stylesheet" href="/css/RNT.css" asp-append-version="true" />
    <script src="/js/RNT.js" defer></script>
}

<div class="admin-container">
    <div class="rnt-header">
        <h2>🎫 Trip Details: @Model.Id</h2>
        <a href="/RouteNTrip/Trips" class="btn-rnt btn-rnt-primary">← Back to Trips</a>
    </div>

    <div style="max-width: 600px; margin: 0 auto;">
        <div class="rnt-card">
            <h3 style="margin-top:0;">📝 Trip Information</h3>
            <hr style="border:0; border-top:1px solid #eee; margin:15px 0;" />

            <div class="detail-group" style="line-height: 2;">
                <p><strong>Path:</strong> @(Model.Route?.Origin ?? "N/A") ➝ @(Model.Route?.Destination ?? "N/A")</p>
                <p><strong>Vehicle ID:</strong> @Model.Vehicle?.VehicleNumber</p>
                <p><strong>Departure:</strong> @Model.DepartureTime.ToString("f")</p>
                <p><strong>Arrival (EST):</strong> @Model.ArrivalTime.ToString("f")</p>
                <p><strong>Available Seats:</strong> @Model.AvailableSeats</p>
                <p><strong>Current Status:</strong> <span class="status-badge status-@Model.Status.Replace(" ", "").ToLower()">@Model.Status</span></p>
            </div>

            <hr style="border:0; border-top:1px solid #eee; margin:20px 0;" />

            <form method="post" action="/RouteNTrip/UpdateTripStatus">
                @Html.AntiForgeryToken()

                <input type="hidden" name="id" value="@Model.Id" />

                <div class="status-update-box">
                    <label><b>Update Overall Status</b></label>

                    <select class="rnt-input" id="overallStatus" name="status" style="margin: 10px 0; width:100%;">
                        <option value="Scheduled" selected="@(Model.Status == "Scheduled")">Scheduled</option>
                        <option value="En Route" selected="@(Model.Status == "En Route")">En Route</option>
                        <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                        <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                    </select>

                    <button type="submit" class="btn-rnt btn-rnt-success" style="width:100%;">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>