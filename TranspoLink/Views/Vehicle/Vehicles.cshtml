@model IEnumerable<Vehicle>

@{
    ViewBag.Title += " | Vehicle Management";
}

@section head {
    <link rel="stylesheet" href="/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/vehicle.css" asp-append-version="true" />
    <script src="/js/vehicle.js" defer></script>
}

<div class="admin-container">
    <div class="admin-header admin-header-row">
        <div>
            <h1>🚌 Vehicle Fleet</h1>
            <p>Manage your buses, trains, and ferries.</p>
        </div>
        <a href="/Vehicle/CreateVehicle" class="btn-view btn-add">+ Add New Vehicle</a>
    </div>

    <div class="search-section">
        <form id="vehicleSearchForm" class="search-container">
            <input type="text" id="searchInput" placeholder="Search by Vehicle No. or Operator..." autocomplete="off">
            <button type="submit" style="display:none;">Search</button>
        </form>
    </div>

    <div class="tabs" style="justify-content: flex-start; margin-bottom: 20px;">
        <a href="javascript:void(0)" onclick="filterType('')" class="tab active" data-type="">All</a>
        <a href="javascript:void(0)" onclick="filterType('Bus')" class="tab" data-type="Bus">🚌 Buses</a>
        <a href="javascript:void(0)" onclick="filterType('Train')" class="tab" data-type="Train">🚄 Trains</a>
        <a href="javascript:void(0)" onclick="filterType('Ferry')" class="tab" data-type="Ferry">🚢 Ferries</a>
    </div>

    <div id="tableContainer" class="recent-section">
        <partial name="_VehicleTable" model="Model" />
    </div>
</div>