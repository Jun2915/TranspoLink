@{
    ViewBag.Title += " | HomePage";
}

<!-- Hero Section -->
<section class="hero">
    <h1>🌍 Travelling by Bus, Train and Ferry in Malaysia!</h1>
    <p style="font-size: 18px; margin-bottom: 40px; opacity: 0.95;">Book your next adventure with ease and comfort</p>

    <!-- Tabs -->
    <div class="tabs">
        <button class="tab" data-transport="bus">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 18.5C18.83 18.5 19.5 17.83 19.5 17C19.5 16.17 18.83 15.5 18 15.5C17.17 15.5 16.5 16.17 16.5 17C16.5 17.83 17.17 18.5 18 18.5M6 18.5C6.83 18.5 7.5 17.83 7.5 17C7.5 16.17 6.83 15.5 6 15.5C5.17 15.5 4.5 16.17 4.5 17C4.5 17.83 5.17 18.5 6 18.5M20 8H17V4H3C1.9 4 1 4.9 1 6V17H3C3 18.66 4.34 20 6 20C7.66 20 9 18.66 9 17H15C15 18.66 16.34 20 18 20C19.66 20 21 18.66 21 17H23V12L20 8Z" />
            </svg>
            Bus
        </button>
        <button class="tab" data-transport="train">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12,2C8,2 4,2.5 4,6V15.5C4,17.43 5.57,19 7.5,19L6,20.5V21H8.23L10.23,19H14L16,21H18V20.5L16.5,19C18.43,19 20,17.43 20,15.5V6C20,2.5 16.42,2 12,2M7.5,17C6.67,17 6,16.33 6,15.5C6,14.67 6.67,14 7.5,14C8.33,14 9,14.67 9,15.5C9,16.33 8.33,17 7.5,17M11,10H6V6H11V10M13,10V6H18V10H13M16.5,17C15.67,17 15,16.33 15,15.5C15,14.67 15.67,14 16.5,14C17.33,14 18,14.67 18,15.5C18,16.33 17.33,17 16.5,17Z" />
            </svg>
            Train
        </button>
        <button class="tab active" data-transport="ferry">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M6,6H18V9.96L12,8L6,9.96M3.94,19H4C5.6,19 7,18.12 8,17C9,18.12 10.4,19 12,19C13.6,19 15,18.12 16,17C17,18.12 18.4,19 20,19H20.05L21.95,12.31C22.03,12.06 22,11.78 21.89,11.54C21.78,11.3 21.59,11.12 21.36,11.04L20,10.62V6C20,4.89 19.1,4 18,4H15V1H9V4H6C4.89,4 4,4.89 4,6V10.62L2.64,11.04C2.41,11.12 2.22,11.3 2.11,11.54C2,11.78 1.97,12.06 2.05,12.31M20,21C18.61,21 17.22,20.53 16,19.67C13.56,21.38 10.44,21.38 8,19.67C6.78,20.53 5.39,21 4,21H2V23H4C5.37,23 6.74,22.65 8,22C10.5,23.3 13.5,23.3 16,22C17.26,22.65 18.62,23 20,23H22V21H20Z" />
            </svg>
            Ferry
        </button>
    </div>

    <!-- Search Form -->
    <div class="search-container">
        <form class="search-form" method="post" asp-action="SearchTrip">
            <div class="origin-destination">
                <div class="form-group">
                    <label for="origin">Origin</label>
                    <div class="input-wrapper">
                        <svg class="icon" viewBox="0 0 24 24" fill="#999">
                            <circle cx="12" cy="12" r="3" />
                            <path d="M12,2C8.13,2 5,5.13 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9C19,5.13 15.87,2 12,2Z" />
                        </svg>
                        <input type="text" id="origin" name="origin" placeholder="From..." required autocomplete="off">
                    </div>
                </div>
                <button type="button" class="swap-btn" title="Swap locations">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="#0f1b3d">
                        <path d="M6.99 11L3 15L6.99 19V16H14V14H6.99V11M21 9L17.01 5V8H10V10H17.01V13L21 9Z" />
                    </svg>
                </button>
                <div class="form-group">
                    <label for="destination">Destination</label>
                    <div class="input-wrapper">
                        <svg class="icon" viewBox="0 0 24 24" fill="#999">
                            <circle cx="12" cy="12" r="3" />
                            <path d="M12,2C8.13,2 5,5.13 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9C19,5.13 15.87,2 12,2Z" />
                        </svg>
                        <input type="text" id="destination" name="destination" placeholder="To..." required autocomplete="off">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="departDate">Depart Date</label>
                <div class="input-wrapper">
                    <svg class="icon" viewBox="0 0 24 24" fill="#0066cc">
                        <path d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" />
                    </svg>
                    <input type="date" id="departDate" name="departDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                </div>
            </div>

            <div class="form-group">
                <label for="returnDate">Return Date (Optional)</label>
                <div class="input-wrapper">
                    <svg class="icon" viewBox="0 0 24 24" fill="#999">
                        <path d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1" />
                    </svg>
                    <input type="date" id="returnDate" name="returnDate">
                </div>
            </div>

            <button type="submit" class="search-btn">🔍 Search Trip</button>
        </form>
    </div>
</section>

