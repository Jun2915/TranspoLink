@inject DB db
@using Microsoft.AspNetCore.Authentication

@{
    User? currentUser = null;
    if (User.Identity.IsAuthenticated)
    {
        var identifier = User.Identity.Name;
        currentUser = db.Users.FirstOrDefault(u => u.Email == identifier || u.Phone == identifier);

        if (currentUser == null || currentUser.IsBlocked)
        {
            Context.SignOutAsync("Cookies");
            Context.Response.Redirect("/Account/Login");
            return;
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | TranspoLink</title>
    <link rel="shortcut icon" href="/images/shortcut_icon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="stylesheet" href="/css/pager.css">
    <link rel="stylesheet" href="/css/app.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" />
    <link rel="stylesheet" href="/css/photo-tools.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/chat.css" asp-append-version="true" />
    @RenderSection("head", false)
</head>
<body>
    @* Flash Message Container *@
    <div class="info">@TempData["Info"]</div>

    <div class="top-bar">
        <div class="logo top-bar-logo">
            <a href="/Home/Index">
                <img src="/images/shortcut_icon.png" alt="TranspoLink Logo" />
            </a>
            <a href="/Home/Index" class="brand-text"><span>TranspoLink</span></a>
        </div>

        <div style="flex: 1;"></div>

        <div class="top-bar-item" id="themeToggle" title="Switch Theme" style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
            <span id="themeIcon">☀️</span>
            <span id="themeText">Light</span>
        </div>

        <div class="top-bar-item">
            🌐 Language
        </div>

        @if (User.Identity.IsAuthenticated && currentUser != null)
        {
            string photoUrl = "/images/default_photo.png";
            if (currentUser is Member m && !string.IsNullOrEmpty(m.PhotoURL))
            {
                photoUrl = (m.PhotoURL == "default_photo.png") ? "/images/default_photo.png" : "/images/" + m.PhotoURL;
            }
            else if (currentUser is Admin a && !string.IsNullOrEmpty(a.PhotoURL))
            {
                photoUrl = a.PhotoURL.StartsWith("/images/") ? a.PhotoURL : "/images/" + a.PhotoURL;
            }

            <div class="user-dropdown-container">
                <div class="top-bar-item user-profile-display" id="profileTrigger">
                    <img src="@photoUrl" class="nav-user-photo" alt="Profile" onerror="this.src='/images/default_photo.png'">
                    <span class="user-welcome-text">@currentUser.Name</span>
                    <span style="font-size: 10px; margin-left: 3px;">▼</span>
                </div>

                <div class="profile-dropdown" id="profileDropdown">
                    <div class="dropdown-header">
                        <img src="@photoUrl" class="dropdown-big-photo" onerror="this.src='/images/default_photo.png'">
                        <p class="dropdown-name">@currentUser.Name</p>
                        <p class="dropdown-email">@(currentUser.Email ?? currentUser.Phone)</p>
                    </div>

                    <div class="dropdown-actions">
                        <a href="/Account/ProfileManage" class="dropdown-btn btn-manage">Manage Account</a>
                        <a href="/Account/Logout" class="dropdown-btn btn-logout">Log Out</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="top-bar-item">
                <a href="/Account/Login">🔐 Login</a> / <a href="/Account/Register">Sign Up</a>
            </div>
        }
    </div>

    <nav>
        <ul class="nav-links">
            @if (User.IsInRole("Admin"))
            {
                <li><a href="/Admin">Dashboard</a></li>

                <li class="nav-item-dropdown" onclick="toggleNavDropdown(event, 'navUserContent')">
                    <a href="javascript:void(0)" style="display:flex; align-items:center; gap:5px;">
                        User Management <span style="font-size:10px;">▼</span>
                    </a>
                    <div class="nav-dropdown-content" id="navUserContent">
                        <a href="/Admin/Admins">🛡️ Admins</a>
                        <a href="/Admin/Members">👥 Members</a>
                        <a href="/RouteNTrip/Drivers">👨‍✈️ Drivers List</a>
                    </div>
                </li>

                <li class="nav-item-dropdown" onclick="toggleNavDropdown(event, 'navOpsContent')">
                    <a href="javascript:void(0)" style="display:flex; align-items:center; gap:5px;">
                        Operations <span style="font-size:10px;">▼</span>
                    </a>
                    <div class="nav-dropdown-content" id="navOpsContent">
                        <a href="/RouteNTrip/Routes">🗺️ Routes</a>
                        <a href="/Vehicle/Vehicles">🚌 Vehicles</a>
                        <a href="/RouteNTrip/Trips">🎫 Trip Management</a>
                        <a href="/Admin/Bookings">📋 Bookings</a>
                    </div>
                </li>

                <li><a href="/Home/Reports">📊 Reports</a></li>
                @* Added Support Chat Link for Admins *@
                <li><a href="/Chat/Support">💬 Support</a></li>
                <li><a href="/Home/AboutUs">About Us</a></li>
            }
            else
            {
                @* Non-Admin Navigation *@
                <li><a href="/">Home</a></li>
                <li><a href="/#features">Features</a></li>
                <li><a href="/#trending">News & Offers</a></li>
                <li><a href="/#contact">Contact</a></li>
                <li><a href="/Home/AboutUs">About Us</a></li>
                <li><a href="/Booking/BookingList">Booking List</a></li>
            }
        </ul>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        Developed by <b>BMIT 2023 Web And Mobile System</b> &middot; Copyrighted &copy; @DateTime.Today.Year
    </footer>

    @* ================================================================= *@
    @* CHAT UI SECTION ) *@
    @* ================================================================= *@
    @if (User.Identity.IsAuthenticated && currentUser != null && !User.IsInRole("Admin"))
    {
        <button class="chat-btn-float" onclick="toggleChat()" title="Chat with Support">💬</button>

        <div class="chat-box-container">
            <div class="chat-header">
                <span>💬 TranspoLink Customer Service</span>
                <span style="cursor:pointer;" onclick="toggleChat()">✖</span>
            </div>

            <div class="chat-messages">
                <div style="text-align:center; color:#999; font-size:12px; margin-top:10px;" class="loading-msg">
                    Loading history...
                </div>
            </div>

            @* 1. Reply Context Bar *@
            <div id="replyPreviewBar" style="display:none;">
                <span id="replyTextTarget">Replying...</span>
                <span style="cursor:pointer; font-weight:bold;" onclick="cancelReply()">✕</span>
            </div>

            @* 2. Image Preview Bar *@
            <div id="imagePreviewBar" style="display:none;">
                <img id="imagePreviewSrc" src="" alt="Preview" />
                <div style="flex:1; font-size:12px; color:#666; margin-left:10px;">Image selected</div>
                <span style="cursor:pointer; font-weight:bold; color:#ff4757;" onclick="cancelImage()">✕</span>
            </div>

            <div class="chat-input-area">
                @* Camera Button *@
                <button class="btn-tool-chat" onclick="triggerPhotoUpload()" title="Select Photo">📷</button>
                @* Hidden File Input *@
                <input type="file" id="chatPhotoInput" accept="image/*" style="display:none;" onchange="previewPhoto(this)">

                @* Text Input *@
                <input type="text" id="chatInput" class="chat-input" placeholder="Type a message..." autocomplete="off">

                @* Send Button *@
                <button id="btnSendChat" class="chat-send-btn">➤</button>
            </div>
        </div>
    }

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/app.js" asp-append-version="true"></script>
    <script src="/js/user.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <script src="/js/photo-tools.js" asp-append-version="true"></script>
    @if (User.Identity.IsAuthenticated && currentUser != null)
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
        <script>
            var currentUserDisplayName = "@currentUser.Name";
        </script>
        <script src="/js/chat.js" asp-append-version="true"></script>
    }

    @RenderSection("scripts", required: false)

    <script>
        function toggleNavDropdown(e, id) {
            if (e) e.stopPropagation();
            $('.nav-dropdown-content').not('#' + id).removeClass('show-nav-dropdown');
            $('#' + id).toggleClass('show-nav-dropdown');
        }

        $(document).on('click', function () {
            $('.nav-dropdown-content').removeClass('show-nav-dropdown');
        });
    </script>

    @RenderSection("foot", false)
</body>
</html>