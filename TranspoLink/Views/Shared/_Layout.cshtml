@inject DB db

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="/images/shortcut_icon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="stylesheet" href="/css/pager.css">
    <link rel="stylesheet" href="/css/app.css" asp-append-version="true">
    @RenderSection("head", false)
</head>
<body>
    <div class="top-bar">
        <div class="top-bar-item">
            🌐 Language
        </div>
        <div class="top-bar-item">
            📋 Check My Booking
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="top-bar-item">
                👋 Welcome, @User.Identity.Name
            </div>
            <div class="top-bar-item">
                <a href="/Account/Logout">🚪 Logout</a>
            </div>
        }
        else
        {
            <div class="top-bar-item">
                <a href="/Account/Login">🔐 Login</a> / <a href="/Account/Register">Sign Up</a>
            </div>
        }
    </div>

    <nav>
        <div class="logo">
            <img src="/images/shortcut_icon.png" alt="TranspoLink Logo" style="width:50px; height:50px;" />
            <span>TranspoLink</span>
        </div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            @if (User.IsInRole("Admin"))
            {
                <li><a href="/Admin">Dashboard</a></li>
                <li><a href="/Admin/Members">Members</a></li>
                <li><a href="/Admin/Routes">Routes</a></li>
                <li><a href="/Admin/Vehicles">Vehicles</a></li>
                <li><a href="/Admin/Trips">Trips</a></li>
                <li><a href="/Admin/Bookings">Bookings</a></li>
            }
            else if (User.Identity.IsAuthenticated)
            {
                <li><a href="#features">Features</a></li>
                <li><a href="#trending">News & Offers</a></li>
                <li><a href="/Account/UpdateProfile">Profile</a></li>
            }
            else
            {
                <li><a href="#features">Features</a></li>
                <li><a href="#trending">News & Offers</a></li>
                <li><a href="#contact">Contact</a></li>
            }
        </ul>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        Developed by <b>BMIT 2023 Web And Mobile System</b> &middot;
        Copyrighted &copy; @DateTime.Today.Year
    </footer>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/app.js" asp-append-version="true"></script>
    @RenderSection("foot", false)
</body>
</html>
