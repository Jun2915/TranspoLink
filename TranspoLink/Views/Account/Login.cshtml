@model LoginVM
@{
   ViewBag.Title += " | Login";
}


@section head {
    <link rel="stylesheet" href="/css/login.css" />
    <script src="/js/regNlog.js" defer></script>
}

<div class="auth-container">
    <div class="auth-card">
        <!-- Tabs -->
        <div class="auth-tabs">
            <a href="/Account/Login" class="auth-tab active">
                Log in
            </a>
            <a href="/Account/Register" class="auth-tab">
                Sign up
            </a>
        </div>

        <!-- Login Form -->
        <form method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <!-- Email / User ID Section -->
            <div class="auth-option-group">
                <button type="button" class="auth-option active" data-login-type="email">
                    <span class="auth-option-icon">✓</span>
                    Email / User ID
                </button>
                <button type="button" class="auth-option" data-login-type="phone">
                    <span class="auth-option-icon-empty"></span>
                    Phone
                </button>
            </div>

            <!-- Email Input -->
            <div class="auth-input-group" id="email-input-group">
                <span class="auth-input-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="#666">
                        <path d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                    </svg>
                </span>
                <input asp-for="Email" type="text" placeholder="Email / User ID" autofocus>
            </div>
            <span asp-validation-for="Email" class="field-validation-error"></span>

            <!-- Phone Input (hidden by default) -->
            <div class="auth-input-group" id="phone-input-group" style="display: none;">
                <span class="auth-input-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="#666">
                        <path d="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4A1,1 0 0,1 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.25 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.59L6.62,10.79Z" />
                    </svg>
                </span>
                <input type="text" name="Phone" placeholder="Phone" class="auth-input">
            </div>

            <!-- Password Input -->
            <div class="auth-input-group">
                <span class="auth-input-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="#666">
                        <path d="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z" />
                    </svg>
                </span>
                <input asp-for="Password" type="password" placeholder="Password">
                <button type="button" class="auth-toggle-password" onclick="togglePassword(this)">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="#999">
                        <path d="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" />
                    </svg>
                </button>
            </div>
            <span asp-validation-for="Password" class="field-validation-error"></span>

            <!-- Remember Me & Forgot Password -->
            <div class="auth-options-row">
                <label class="auth-checkbox">
                    <input asp-for="RememberMe" type="checkbox">
                    <span class="auth-checkbox-label">Remember Me</span>
                </label>
                <a href="/Account/ResetPassword" class="auth-link">Forgot password?</a>
            </div>

            <!-- Login Button -->
            <button type="submit" class="auth-submit-btn">Log In</button>

            <!-- Divider -->
            <div class="auth-divider">
                <span>or log in with</span>
            </div>

            <!-- Social Login Buttons -->
            <div class="auth-social-buttons">
                <button type="button" class="auth-social-btn google">
                    <svg width="20" height="20" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Google
                </button>
                <button type="button" class="auth-social-btn facebook">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="#1877F2">
                        <path d="M12 2.04C6.5 2.04 2 6.53 2 12.06C2 17.06 5.66 21.21 10.44 21.96V14.96H7.9V12.06H10.44V9.85C10.44 7.34 11.93 5.96 14.22 5.96C15.31 5.96 16.45 6.15 16.45 6.15V8.62H15.19C13.95 8.62 13.56 9.39 13.56 10.18V12.06H16.34L15.89 14.96H13.56V21.96A10 10 0 0 0 22 12.06C22 6.53 17.5 2.04 12 2.04Z" />
                    </svg>
                    Facebook
                </button>
            </div>

            <!-- Sign Up Link -->
            <div class="auth-footer-text">
                Don't have an account? <a href="/Account/Register" class="auth-link-bold">Sign up</a>
            </div>
        </form>
    </div>
</div>