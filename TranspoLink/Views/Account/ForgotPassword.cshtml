@model ForgotPasswordVM
@{
    ViewBag.Title += " | Forgot Password";
}

@section head {
    <link rel="stylesheet" href="/css/forgotpass.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <h2>Forgot Password?</h2>
        <p>Enter your registered Email or Phone Number to receive a secure OTP code.</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="auth-input-group">
                <span class="auth-input-icon">📧</span>
                <input asp-for="EmailOrPhone" placeholder="Email or Phone Number" autofocus>
            </div>
            <span asp-validation-for="EmailOrPhone" class="field-validation-error"></span>

            <button type="submit" class="auth-submit-btn">Send OTP</button>

            <div style="margin-top: 20px;">
                <a href="/Account/Login" class="auth-link">← Back to Login</a>
            </div>
        </form>
    </div>
</div>