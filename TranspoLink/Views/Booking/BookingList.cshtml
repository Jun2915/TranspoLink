@model IEnumerable<TranspoLink.Models.BookingListVM>

@{
    ViewData["Title"] = "My Bookings";
}

@section head {
    <link rel="stylesheet" href="~/css/booking-list.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
}

<div class="booking-list-container">
    <div class="list-header d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold m-0">Purchase Completed/Cancelled</h2>
    </div>

    @if (TempData["RefundMessage"] != null)
    {
        <div class="refund-alert alert alert-warning shadow-sm border-0 mb-4 d-flex align-items-center gap-3">
            <i class="bi bi-info-circle-fill fs-4"></i>
            <div>
                <strong class="d-block">Refund Processing</strong>
                <span class="small">@TempData["RefundMessage"]</span>
            </div>
        </div>
    }

    <div class="table-responsive-custom bg-white shadow-sm rounded-3 p-3">
        <table class="table custom-table align-middle">
            <thead>
                <tr>
                    <th>Trip ID</th>
                    <th>Route</th>
                    <th>Departure</th>
                    <th class="text-center">Status</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <i class="bi bi-inbox display-4 d-block mb-3"></i>
                            <p>No bookings found.</p>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="fw-bold text-dark">#@item.BookingId</span></td>
                            <td>
                                <div class="route-display d-flex align-items-center">
                                    <span class="fw-bold">@item.Origin</span>
                                    <i class="bi bi-arrow-right text-muted mx-2"></i>
                                    <span class="fw-bold text-primary">@item.Destination</span>
                                </div>
                            </td>
                            <td>
                                <div class="departure-info">
                                    <span class="d-block fw-semibold text-dark">@item.DepartureTime.ToString("dd MMM yyyy")</span>
                                    <span class="small text-muted">@item.DepartureTime.ToString("hh:mm tt")</span>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="status-badge @item.Status.ToLower()">@item.Status</span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-action-group d-flex justify-content-end gap-2">

                                    @if (item.Status == "Paid")
                                    {
                                        <form asp-action="CancelBooking" asp-controller="Booking" method="post" class="cancel-form">
                                            <input type="hidden" name="id" value="@item.BookingId" />
                                            <button type="submit" class="btn btn-delete-custom btn-sm px-3 rounded-2">Cancel Booking</button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>



@section scripts {
    <script src="~/js/bookinglist.js" asp-append-version="true"></script>
}